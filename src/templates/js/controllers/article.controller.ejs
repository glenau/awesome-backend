import ArticleService from '../services/article.service.js';
import Response from '../utils/response.js';

class ArticleController {
    async createArticle(req, res, next) {;
        try {
            const article = await ArticleService.createArticle(req.body);
            Response.success(req, res, article);
        } catch (err) {
            next(err);
        }
    }

    async getArticles(req, res, next) {;
        try {
            const articles = await ArticleService.findArticles();
            Response.success(req, res, articles);
        } catch (err) {
            next(err);
        }
    }

    async getArticleByID(req, res, next) {;
        try {
            const article = await ArticleService.findArticleByID(req.params.id);
            Response.success(req, res, article);
        } catch (err) {
            next(err);
        }
    }

    async updateArticle(req, res, next) {;
        try {
            const article = await ArticleService.updateArticleByID(req.params.id, req.body);
            Response.success(req, res, article);
        } catch (err) {
            next(err);
        }
    }

    async deleteArticle(req, res, next) {;
        try {
            const result = await ArticleService.deleteArticleByID(req.params.id);
            Response.success(req, res, result);
        } catch (err) {
            next(err);
        }
    }
}

export default new ArticleController();
