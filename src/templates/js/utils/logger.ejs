/*
    Pino-based logging
*/

import pino from 'pino';

// Creating a logger instance using Pino with specific configuration options
const logger = pino({
    transport: {
        target: 'pino-pretty', // Using pino-pretty for prettifying logs
        options: {
            colorize: true, // Enabling colorization for better readability
            translateTime: 'SYS:standard', // Translating time to a standard format
            ignore: 'hostname,pid', // Ignoring hostname and process ID in logs
        },
    },
});

export default logger;
