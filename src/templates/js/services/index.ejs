/*
    Creating a database connection object
*/

<% if(database && databaseType === 'MongoDB')  { -%>
import mongoose from 'mongoose';
import env from '../config/env.js';

const db = {
    mongoose,
    url: env.mongoUrl,
};

export default db;
<% } -%>
<% if(database && databaseType === 'PostgreSQL')  { -%>
import { Sequelize } from 'sequelize';
import env from '../config/env.js';

const sequelize = new Sequelize(env.postgreSQLUrl, {
    logging: false,
    username: env.postgresSQLUser,
});

const db = {
    sequelize,
    url: env.postgreSQLUrl,
    user: env.postgresSQLUser,
};

export default db;
<% } -%>